<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <ListView fx:id="listOfMembers" prefHeight="400.0" prefWidth="117.0" onMouseClicked="#clickToMember" />
      <BorderPane prefHeight="400.0" prefWidth="600.0">
          <bottom>
              <HBox alignment="TOP_RIGHT" prefHeight="51.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                  <children>
                      <TextField fx:id="entryField" onKeyPressed="#keyListener" prefHeight="50.0" prefWidth="450.0" HBox.hgrow="ALWAYS" />
                      <Button fx:id="sendButton" maxHeight="50.0" maxWidth="150.0" mnemonicParsing="false" onAction="#clickSend" prefHeight="50.0" prefWidth="150.0" text="Send" />
                  </children>
              </HBox>
          </bottom>
         <center>
            <ListView fx:id="outputField" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</HBox>
